<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="owl.point_of_sale.PaymentScreenTop" t-inherit="point_of_sale.PaymentScreenTop" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('top-content-center')]" position="after">
            <div class="button back btn btn-lg btn-secondary" t-on-click="() => this.showNextScreen()">
                <i class="fa fa-angle-double-right me-2" />
                <span class="back_text">Next</span>
            </div>
        </xpath>
    </t>

</templates>